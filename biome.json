{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"extends": ["@nivalis/biome-config"],
	"linter": {
		"rules": {
			"style": {
				"useConsistentArrayType": "off",
				"noMagicNumbers": "off"
			},
			"suspicious": {
				"noConsole": "off"
			},
			"nursery": {
				"noUnnecessaryConditions": "off",
				"useConsistentTypeDefinitions": "off"
			}
		}
	}
}
